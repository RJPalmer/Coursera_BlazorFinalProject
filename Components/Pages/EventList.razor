@page "/"
@using global::Coursera_BlazorFinalProject.Components.Services
@inject EventService EventService

<section class="content">
    <h3>Upcoming Events</h3>

    @if (EventService.GetEvents() == null || !EventService.GetEvents().Any())
    {
        <p>No events available.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in EventService.GetEvents())
                {
                    <tr>
                        <td>@ev.Name</td>
                        <td>@ev.Date.ToShortDateString()</td>
                        <td>@ev.Location</td>
                        <td>@ev.Description</td>
                        <td>
                            <a href="/eventdetails/@ev.Id" class="btn btn-link">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
